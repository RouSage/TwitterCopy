@page
@model TwitterCopy.Pages.AvatarModel
@{
    ViewData["Title"] = "Avatar";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Vm.Avatar" class="control-label"></label>
        <input asp-for="Vm.Avatar" type="file" name="Avatar" class="form-control" />
        <span asp-validation-for="Vm.Avatar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>

