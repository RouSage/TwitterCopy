@page "{slug}"
@model TwitterCopy.Pages.Profiles.FollowersModel
@{
    ViewData["Title"] = "Followers";
}

<partial name="_ProfileNav" model="@Model.ProfileUser" view-data="ViewData" />
<div class="row">
    <div class="col-md-3">
        <div id="profileInfo">
            <h4>
                <a id="profileInfoUserName" asp-page="./Index" asp-route-slug="@Model.ProfileUser.Slug">
                    @Model.ProfileUser.UserName
                </a>
            </h4>
            <p>
                <a id="profileInfoSlug" asp-page="./Index" asp-route-slug="@Model.ProfileUser.Slug" data-slug="@Model.ProfileUser.Slug">
                    @@@Model.ProfileUser.Slug
                </a>
            </p>
            <p>
                <span id="profileInfoBio">@Model.ProfileUser.Bio</span>
            </p>
            <p>
                <span id="profileInfoLocation">@Model.ProfileUser.Location</span>
            </p>
            <p>
                <span id="profileInfoWebsite">@Model.ProfileUser.Website</span>
            </p>
        </div>
        <partial name="_ProfileEditForm" model="Model.Input" />
    </div>

    <div class="col-md">
        @if (Model.Followers.Count() > 0)
        {
            <div class="row">
                @foreach (var follower in Model.Followers)
                {
                    <div class="col-md-4">
                        <div class="border mt-3">
                            <div class="profile-follow-actions d-flex justify-content-end p-1">
                                <button type="button" class="btn btn-sm btn-outline-primary btn-follow-main
                                        @(follower.UserId.ToString() == ViewData["CurrentUserId"].ToString()
                                            || follower.FollowerId.ToString() == ViewData["CurrentUserId"].ToString()
                                            ? "d-none" : "")">
                                    <span data-userslug="@follower.Follower.Slug">Follow</span>
                                </button>
                                <button type="button" class="btn btn-sm btn-primary btn-following-main
                                        @(follower.FollowerId.ToString() == ViewData["CurrentUserId"].ToString() ? "d-none" : "")">
                                    <span data-userslug="@follower.Follower.Slug">Following</span>
                                </button>
                                <button type="button" class="btn btn-sm btn-danger btn-unfollow-main d-none">
                                    <span data-userslug="@follower.Follower.Slug">Unfollow</span>
                                </button>
                            </div>
                            <h4>
                                <a asp-page="./Index" asp-route-slug="@follower.Follower.Slug">
                                    @follower.Follower.UserName
                                </a>
                            </h4>
                            <p>
                                <a asp-page="./Index" asp-route-slug="@follower.Follower.Slug">
                                    @@@follower.Follower.Slug
                                </a>
                            </p>
                            <p>
                                <span>@follower.Follower.Bio</span>
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>User doesn't have followers yet.</p>
        }
    </div>
</div>

