@model TwitterCopy.Models.ProfileViewModel

<div class="row mb-3">
    <div class="col-md-3">
    </div>
    <!-- /.col-md-3 -->
    <div class="col-md">
        <div class="profileStats">
            <ul class="profile-nav nav text-center d-flex align-items-center">
                <li class="nav-item">
                    <a class="nav-link @ManageProfileNavPages.IndexNavClass(ViewContext)"
                       asp-page="./Index" asp-route-slug="@Model.Slug">
                        <span class="profile-nav-label">Tweets</span>
                        <span id="tweetsCount" class="profile-nav-value">@Model.TweetsCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @ManageProfileNavPages.FollowingNavClass(ViewContext)"
                       asp-page="./Following" asp-route-slug="@Model.Slug">
                        <span class="profile-nav-label">Following</span>
                        <span id="followingCount" class="profile-nav-value">@Model.FollowingCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @ManageProfileNavPages.FollowersNavClass(ViewContext)"
                       asp-page="./Followers" asp-route-slug="@Model.Slug">
                        <span class="profile-nav-label">Followers</span>
                        <span id="followersCount" class="profile-nav-value">@Model.FollowersCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @ManageProfileNavPages.LikesNavClass(ViewContext)"
                       asp-page="./Likes" asp-route-slug="@Model.Slug">
                        <span class="profile-nav-label">Likes</span>
                        <span id="likesCount" class="profile-nav-value">@Model.LikesCount</span>
                    </a>
                </li>
                <li class="nav-item ml-auto mr-2">
                    <div id="profileActions">
                        @if (!(bool)ViewData["IsYourself"])
                        {
                            <div class="profile-follow-actions">
                                <button type="button" class="btn btn-outline-primary btn-follow-main @((bool)ViewData["IsFollowed"] ? "d-none" : "")">
                                    <span data-userslug="@Model.Slug">Follow</span>
                                </button>
                                <button type="button" class="btn btn-primary btn-following-main @((bool)ViewData["IsFollowed"] ? "" : "d-none")">
                                    <span data-userslug="@Model.Slug">Following</span>
                                </button>
                                <button type="button" class="btn btn-danger btn-unfollow-main d-none">
                                    <span data-userslug="@Model.Slug">Unfollow</span>
                                </button>
                            </div>
                        }
                        else if ((bool)ViewData["IsYourself"])
                        {
                            <div class="profile-edit-actions">
                                <button type="button" id="editProfileBtn" class="btn btn-outline-secondary">
                                    <span>Edit profile</span>
                                </button>
                                <button type="button" id="cancelEditBtn" class="btn btn-outline-secondary d-none">
                                    <span>Cancel</span>
                                </button>
                                <button type="button" id="saveEditBtn" class="btn btn-outline-primary d-none">
                                    <span>Save changes</span>
                                </button>
                            </div>
                        }
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.col-md -->
</div>
<!-- /.row -->
