@using Microsoft.AspNetCore.Identity
@using TwitterCopy.Core.Entities

@inject SignInManager<TwitterCopyUser> SignInManager
@inject UserManager<TwitterCopyUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a asp-page="/Account/Settings/Index" title="Manage" class="nav-link">@UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link nav-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav mr-auto">
        <li class="nav-item"><a asp-page="/Account/Register" class="nav-link">@Localizer["Register"]</a></li>
        <li class="nav-item"><a asp-page="/Account/Login" class="nav-link">@Localizer["Login"]</a></li>
    </ul>
}