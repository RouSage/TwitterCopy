@page
@model IndexModel

<div class="row">
    <div class="col-md-3 p-0">
        <div class="border mt-3">
            <div class="d-flex flex-column p-2">
                <h4>
                    <a asp-page="/Profiles/Index" asp-route-slug="@Model.CurrentUser.Slug">
                        <strong>@Model.CurrentUser.UserName</strong>
                    </a>
                </h4>
                <h6>
                    <a asp-page="/Profiles/Index" asp-route-slug="@Model.CurrentUser.Slug">
                        <span class="text-muted">@@@Model.CurrentUser.Slug</span>
                    </a>
                </h6>
            </div>
            <div class="d-flex align-items-center">
                <ul class="nav text-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Profiles/Index" asp-route-slug="@Model.CurrentUser.Slug">
                            <small class="profile-card-label">Tweets</small>
                            <span id="tweetsCount" class="profile-card-value">@Model.CurrentUser.TweetsCount</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Profiles/Following" asp-route-slug="@Model.CurrentUser.Slug">
                            <small class="profile-card-label">Following</small>
                            <span id="followingsCount" class="profile-card-value">@Model.CurrentUser.FollowingCount</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Profiles/Followers" asp-route-slug="@Model.CurrentUser.Slug">
                            <small class="profile-card-label">Followers</small>
                            <span id="followersCount" class="profile-card-value">@Model.CurrentUser.FollowersCount</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.col-md-3 -->

    <div class="col-md-6">
        <h2>Tweets</h2>
        <form method="post" id="sendTweetForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Tweet.Text" id="tweetTextInput"
                       class="form-control" placeholder="What's happening?" />
                <span asp-validation-for="Tweet.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tweet" class="btn btn-primary" />
            </div>
        </form>
        @if (Model.FeedTweets.Count() > 0)
        {
            foreach (var tweet in Model.FeedTweets)
            {
                <partial name="_Tweet" model="tweet" />
            }
        }
        else
        {
            <p>There're no tweets yet.</p>
        }
    </div>

    <partial name="_DeleteTweetModal" />
    <partial name="_TweetModal" />

    <div class="col-md-3">
        <h2>Right sidebar</h2>
    </div>
</div>
